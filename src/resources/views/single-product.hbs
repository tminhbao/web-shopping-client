<!-- Begin Li's Breadcrumb Area -->
<div class="breadcrumb-area">
  <div class="container">
    <div class="breadcrumb-content">
      <ul>
        <li><a href="/">Home</a></li>
        <li class="active">Single Product</li>
      </ul>
    </div>
  </div>
</div>
<!-- Li's Breadcrumb Area End Here -->
<!-- content-wraper start -->
<div class="content-wraper">
  <div class="container">
    {{#each listItem}}
    <form action="/single-product">
      <div class="row single-product-area">
        <div class="col-lg-5 col-md-6">
          <!-- Product Details Left -->
<input
                                    type="hidden"
                                    name="id"
                                    value={{laptop_id}}
          <div class="product-details-left">
            <div class="product-details-images slider-navigation-1">
              <div class="lg-image">
                <a
                  class="popup-img venobox vbox-item"
                  href="{{image}}"
                  data-gall="myGallery"
                >
                <input
                                    type="hidden"
                                    name="imageSrc"
                                    value={{image}}>
                  <img src="{{image}}" alt="product image" class="product-image" />
                </a>
              </div>
            </div>
          </div>

          <!--// Product Details Left -->
        </div>

        <div class="col-lg-7 col-md-6">
          <div class="product-details-view-content pt-60">
            <div class="product-info">
              <h2>{{name}}</h2>
              {{!-- <input type="hidden" value={{name}} name="title"> --}}
              <div class="price-box pt-20">
                <span class="new-price new-price-2">{{price}} đ</span>
                <input type="hidden" value={{price}} name="price">
              </div>
              <div hidden>
                <img src={{image}} class="imageSrc">
              </div>
              <div class="product-desc">
                <p>
                  <span>
                    CPU:
                    {{laptop_cpu}}
                    <br />
                    RAM:
                    {{laptop_ram}}
                    <br />
                    VGA:
                    {{laptop_vga}}
                    <br />
                    Ổ cứng:
                    {{laptop_disk}}
                    <br />
                  </span>
                </p>
              </div>
              <div class="single-add-to-cart">
                <div class="cart-quantity">
                  
                  <div class="quantity">
                    <label>Quantity</label>
                    <div class="cart-plus-minus">
                      <input
                        id="quantity-product"
                        class="cart-plus-minus-box"
                        value="1"
                        type="text"
                        name="quantity"
                      />
                    </div>
                  </div>
                  
                  
                  <button id="product-add-to-card-btn" class="add-to-cart" data-src={{laptop_id}} data-user={{user.id}} type="submit">Add to cart</button></form>
                  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

<div class="product-area pt-35">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="li-product-tab">
          <ul class="nav li-product-menu">
            <li><a class="active" data-toggle="tab" href="#description"><span
                >Description</span></a></li>
            <li><a data-toggle="tab" href="#reviews"><span
                >Reviews</span></a></li>
          </ul>
        </div>
        <!-- Begin Li's Tab Menu Content Area -->
      </div>
    </div>
    <div class="tab-content">
      <div id="description" class="tab-pane active show" role="tabpanel">
        {{#each listItem}}
          <div class="product-description">
            <span>
              CPU:
              {{laptop_cpu}}
              <br />
              RAM:
              {{laptop_ram}}
              <br />
              VGA:
              {{laptop_vga}}
              <br />
              Ổ cứng:
              {{laptop_disk}}
              <br />
            </span>
          </div>
        {{/each}}
      </div>
      <div id="reviews" class="tab-pane" role="tabpanel">
        <div class="product-reviews">

          <div class="product-details-comment-block">

            {{#each listComment}}
              <div class="comment-details">
                <h4 class="title-block author-info">{{username}}</h4>
                <p class="author-comment">{{content}}</p>
              </div>
            {{/each}}

            <div class="review-btn">
              <a
                class="review-links"
                href="#"
                data-toggle="modal"
                data-target="#mymodal"
              >Write Your Review!</a>
            </div>

            <div class="pagination">
              <div class="row">
                <div class="col-lg-6 col-md-6 pt-xs-15">
                </div>
                <div class="col-lg-6 col-md-6">
                  <ul class="pagination-box pt-xs-20 pb-xs-15">
                    {{#each listPageComment}}
                      <li><a href="/single-product?id={{laptop_id}}&?page={{this}}">{{this}}</a></li>
                    {{/each}}
                  </ul>
                </div>
              </div>
            </div>
            <!-- Begin Quick View | Modal Area -->
            <div class="modal fade modal-wrapper" id="mymodal">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-body">
                    <h3 class="review-page-title">Write Your Review</h3>
                    <div class="modal-inner-area row">
                      <div class="col-lg-12">
                        <div class="li-review-content">
                          <!-- Begin Feedback Area -->
                          <div class="feedback-area">
                            <div class="feedback">
                              <h3 class="feedback-title">Our Feedback</h3>
                              <form action="/single-product">
                                {{#each listItem}}
                                  <input
                                    type="hidden"
                                    name="id"
                                    value={{laptop_id}}
                                  />
                                {{/each}}
                                <p class="feedback-form">
                                  <label for="feedback">Your Review</label>
                                  <textarea
                                    id="feedback"
                                    name="content"
                                    cols="45"
                                    rows="8"
                                    aria-required="true"
                                  ></textarea>
                                </p>
                                {{#if user}}
                                <div class="feedback-input">
                                  {{!-- <p class="feedback-form-author">
                                    <label for="username">{{firstname}}<span
                                        class="required"
                                      ></span>
                                    </label>
                                    <input
                                      id="username"
                                      name="username"
                                      size="30"
                                      aria-required="true"
                                      type="text"
                                    />
                                  </p> --}}
                                  {{else}}
                                  <div class="feedback-input">
                                  <p class="feedback-form-author">
                                    <label for="username">Name<span
                                        class="required"
                                      ></span>
                                    </label>
                                    <input
                                      id="username"
                                      name="username"
                                      value=""
                                      size="30"
                                      aria-required="true"
                                      type="text"
                                    />
                                  </p>
                                  {{/if}}

                                  <div class="feedback-btn pb-15">
                                    <button type="submit" class="btn btn-dark">
                                      Submit
                                    </button>
                                    <button
                                      type="submit"
                                      class="btn btn-dark"
                                      data-dismiss="modal"
                                    >Close</button>
                                  </div>
                                </div>
                              </form>
                            </div>
                          </div>
                          <!-- Feedback Area End Here -->
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- Quick View | Modal Area End Here -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

